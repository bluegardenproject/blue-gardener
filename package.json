{
  "name": "blue-gardener",
  "version": "0.1.3",
  "description": "CLI tool to manage AI coding agents across multiple platforms - install, remove, and sync specialized AI agents for Cursor, Claude Desktop, Codex, GitHub Copilot, Windsurf, and OpenCode",
  "type": "module",
  "bin": {
    "blue-gardener": "dist/index.js"
  },
  "files": [
    "dist",
    "agents"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/index.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky && npm run build",
    "release": "release-it",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml,yaml}": "prettier --write"
  },
  "keywords": [
    "cursor",
    "claude",
    "codex",
    "copilot",
    "windsurf",
    "opencode",
    "ai",
    "agents",
    "subagents",
    "cli",
    "developer-tools",
    "ai-coding-assistant"
  ],
  "author": "Philipp Trentmann",
  "license": "MIT",
  "homepage": "https://bluegardenproject.github.io/blue-gardener/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluegardenproject/blue-gardener.git"
  },
  "bugs": {
    "url": "https://github.com/bluegardenproject/blue-gardener/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^25.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  }
}
